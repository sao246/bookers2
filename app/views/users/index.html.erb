<%= render partial: 'users/show', locals: { user: @user }%>
<%= render partial: 'books/new', locals: { book: @book }%>

<h1>Users</h1>
<table>
  <tr>
    <th> image </th>
    <th> name </th>
  </tr>
  <% @users.each do |user| %>
    <div>
      <tr>
        <% if user.profile_image.attached? %>
          <td><span class="book-title"><p><p><%= image_tag user.get_profile_image(100,100) %></p></td>
        <% else %>
          <td><span class="book-title"><p><p><%= image_tag 'no_image', size: '100x100' %></p></td>
        <% end %>
        <td><span class="book-title"><p><%= user.name %></p></td>
        <td><span class="book-title"><p><%= link_to "Show", user_path(user.id) %></p></td>
      </tr>
    </div>
  <% end %>
</table>
