<h2>User info</h2>

<% if @user.errors.any? %>
  <% if @user.errors.count == 1 %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
  <% else %>
    <%= @user.errors.count %> errors prohibited this obj from being saved:
  <% end %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

  <%= form_with model: @user do |f| %>  
  <h4>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  </h4>
  <h4>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  </h4>
  <h4>  
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputName" %> 
  </h4>
  <h4>
  <%= f.submit "Update User" %>
  </h4>
<% end %>