<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputTitle" %>  
  <%= f.submit "Update Book" %>
<% end %>